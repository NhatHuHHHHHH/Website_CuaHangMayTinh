@model CuaHangMayTinh2.Models.DanhMuc
@{
    ViewBag.Title = "CreateDanhMuc";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<style>
    h2 {
        font-family: 'Orbitron', sans-serif;
        color: var(--accent-cyan);
        text-shadow: 0 0 10px rgba(0, 221, 235, 0.5);
        margin-bottom: 30px;
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            color: var(--text-light);
            font-weight: 500;
            margin-bottom: 5px;
        }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid var(--accent-purple);
        color: var(--text-light);
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.2);
            border-color: var(--accent-cyan);
            box-shadow: 0 0 10px rgba(0, 221, 235, 0.3);
            color: var(--text-light);
        }

    .btn-primary {
        background: var(--primary-gradient);
        border: none;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: var(--accent-cyan);
            box-shadow: 0 0 15px rgba(0, 221, 235, 0.5);
        }

    .btn-secondary {
        background: var(--secondary-gradient);
        border: none;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background: var(--accent-purple);
            box-shadow: 0 0 15px rgba(138, 74, 243, 0.5);
        }

    .text-danger {
        color: var(--accent-orange);
    }
</style>

<h2>Thêm danh mục</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.DanhMucID, "ID")
        @Html.EditorFor(model => model.DanhMucID, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DanhMucID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TenDanhMuc, "Tên danh mục")
        @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
    <a href="@Url.Action("DanhMuc")" class="btn btn-secondary">Quay lại</a>
}